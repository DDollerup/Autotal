@model List<ProductVM>
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
        @foreach (ProductVM pvm in Model)
            {
            <div class="row">
                <div class="col-xs-3">
                    <img src="~/Content/Images/Products/@pvm.GetFirstImage().ImageURL" alt="@pvm.GetFirstImage().Alt" class="img-responsive" />
                </div>
                <div class="col-xs-6">
                    @pvm.Product.Model
                </div>
                <div class="col-xs-1">
                    <a href="#"><i class="glyphicon glyphicon-eye-open"></i></a>
                </div>
                <div class="col-xs-1">
                    <a href="#"><i class="glyphicon glyphicon-edit"></i></a>
                </div>
                <div class="col-xs-1">
                    <a href="#"><i class="glyphicon glyphicon-trash"></i></a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-2">

    </div>
</div>